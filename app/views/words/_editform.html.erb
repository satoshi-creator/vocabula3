<%= form_with(model: word, url: wordbook_word_path(@wordbook, word), method: :patch, local: true) do |form| %>
  <% if word.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(word.errors.count, "error") %>があります：</h4>
      <ul>
        <% word.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :term, '単語' %>
    <%= form.text_field :term, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :definition, '定義' %>
    <%= form.text_area :definition, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit '単語を更新', class: 'btn btn-primary' %>
  </div>
<% end %>
