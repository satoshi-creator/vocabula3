<h1>単語帳一覧</h1>

<%= link_to '新しい単語帳を作成', new_wordbook_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>ユーザー</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @wordbooks.each do |wordbook| %>
      <tr>
        <td><%= wordbook.title %></td>
        <td><%= wordbook.user.name %></td>
        <td>
          <%= link_to '詳細', wordbook_path(wordbook), class: 'btn btn-info btn-sm' %>
          <%= link_to '編集', edit_wordbook_path(wordbook), class: 'btn btn-warning btn-sm' %>
          <%= link_to '削除', wordbook_path(wordbook), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
